# Cerebelum Cloud Platform - Development Environment Variables
# Copy this file to .env.local and customize as needed

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Development Database
DATABASE_USER=cerebelum_dev
DATABASE_PASSWORD=cerebelum_dev_secret
DATABASE_NAME=cerebelum_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_POOL_SIZE=10

# Full Database URL (Phoenix/Ecto format)
DATABASE_URL=ecto://cerebelum_dev:cerebelum_dev_secret@localhost:5432/cerebelum_dev

# PostgreSQL Test Database
TEST_DATABASE_URL=ecto://cerebelum_test:cerebelum_test_secret@localhost:5433/cerebelum_test

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=cerebelum_redis_secret
REDIS_URL=redis://:cerebelum_redis_secret@localhost:6379/0

# ============================================================================
# PHOENIX BACKEND CONFIGURATION
# ============================================================================

# Secret key base (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_mix_phx_gen_secret_minimum_64_characters

# Phoenix Server
PHX_HOST=localhost
PHX_PORT=5000
PHX_SERVER=true

# Endpoint URL
PHX_URL_HOST=localhost
PHX_URL_PORT=5000
PHX_URL_SCHEME=http

# Guardian JWT Configuration
GUARDIAN_SECRET_KEY=your_guardian_secret_key_here_generate_with_mix_guardian_gen_secret

# JWT Token TTL (in seconds)
JWT_ACCESS_TOKEN_TTL=3600
JWT_REFRESH_TOKEN_TTL=2592000

# ============================================================================
# NEXT.JS BUILDER CONFIGURATION
# ============================================================================

# Next.js Development Server
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:5000/socket
NEXT_PUBLIC_BUILDER_URL=http://localhost:3000

# NextAuth (if using)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters

# ============================================================================
# CEREBELUM CORE CONFIGURATION
# ============================================================================

# gRPC Server
ENABLE_GRPC_SERVER=true
GRPC_PORT=9090
GRPC_HOST=localhost

# Worker Pool
WORKER_POOL_SIZE=5
WORKER_POOL_MAX_OVERFLOW=10

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# ============================================================================
# EMAIL CONFIGURATION (Development - use Mailhog or similar)
# ============================================================================

SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@cerebelum.local
SMTP_FROM_NAME=Cerebelum Cloud (Dev)

# ============================================================================
# S3 STORAGE CONFIGURATION (Development - use MinIO or LocalStack)
# ============================================================================

AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
S3_BUCKET=cerebelum-dev
S3_ENDPOINT=http://localhost:9000

# ============================================================================
# OBSERVABILITY & MONITORING
# ============================================================================

# Telemetry
ENABLE_TELEMETRY=true

# Logging
LOG_LEVEL=debug

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9568

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features for development
ENABLE_GITHUB_INTEGRATION=true
ENABLE_BILLING=false
ENABLE_MARKETPLACE=false

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Enable debug mode
DEBUG=true
MIX_ENV=dev
NODE_ENV=development

# Enable code reloading
CODE_RELOADER=true

# Disable rate limiting for development
DISABLE_RATE_LIMITING=true

# ============================================================================
# THIRD-PARTY INTEGRATIONS (Development - use test keys)
# ============================================================================

# GitHub OAuth (create GitHub OAuth App for development)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:4000/auth/github/callback

# Stripe (use test keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenAI (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (for AI features)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
